--// Serviços
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

--// Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Mostrar notificação inicial
Rayfield:Notify({
    Title = "=] SURPRISE, Credits: juão",
    Content = "anti-cheat bypassed!",
    Duration = 10
})

-- Aguarda 1 segundos e executa o loadstring remoto
task.wait(1)
pcall(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/DAVI98458/Nicescript/refs/heads/main/game%20happy", true))()
end)

-- Cria a janela principal
local Window = Rayfield:CreateWindow({
    Name = "Beta Auto Farm",
    LoadingTitle = "Auto Farm Night 1",
    LoadingSubtitle = "by shadown_gd",
    ConfigurationSaving = {
        Enabled = false
    },
    KeySystem = false
})

--======== ABA FARM ========
local FarmTab = Window:CreateTab("Farm", 4483362458)

-- Variável de controle do noclip
local noclipEnabled = false

-- Função para ativar noclip
local function EnableNoclip()
    if noclipEnabled then return end
    noclipEnabled = true

    RunService.Stepped:Connect(function()
        if not noclipEnabled then return end
        local char = player.Character
        if char then
            for _, part in ipairs(char:GetDescendants()) do
                if part:IsA("BasePart") and part.CanCollide then
                    part.CanCollide = false
                end
            end
        end
    end)
end

-- Função SafeZone
local function CreateSafeZone()
    local platformPos = Vector3.new(-19, 8, -105)
    local teleportPos = Vector3.new(-33, 26, -88)

    local existing = workspace:FindFirstChild("SafeZonePlatform")
    if existing then
        existing:Destroy()
    end

    local part = Instance.new("Part")
    part.Name = "SafeZonePlatform"
    part.Size = Vector3.new(40, 1, 40)
    part.Position = platformPos
    part.Anchored = true
    part.CanCollide = true
    part.Color = Color3.fromRGB(0, 255, 0)
    part.Material = Enum.Material.Neon
    part.Transparency = 0.9
    part.Parent = workspace

    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    local tweenInfo = TweenInfo.new(4, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
    local tween = TweenService:Create(hrp, tweenInfo, {CFrame = CFrame.new(teleportPos)})
    tween:Play()

    -- Ativa o noclip após o teleporte
    EnableNoclip()
end

FarmTab:CreateButton({
    Name = "Safe Zone (When you click, stay still, it's recommended)",
    Callback = CreateSafeZone
})

--======== BOTÃO DISABLE COLD (Temperature) ========

FarmTab:CreateButton({
    Name = "Disable Cold (Temperature)",
    Callback = function()

        local Players = game:GetService("Players")
        local player = Players.LocalPlayer

        local function tryDisable()
            local charFolder = workspace:FindFirstChild(player.Name)
            if not charFolder then
                warn("script not available for this ID.")
                return
            end

            local temperature = charFolder:FindFirstChild("Temperature")
            if not temperature then
                warn("Objeto 'Temperature' não encontrado dentro da pasta do jogador.")
                return
            end

            -- Caso seja um objeto que tenha a propriedade Disabled
            if temperature:IsA("Script") or temperature:IsA("LocalScript") then
                temperature.Disabled = true
            elseif temperature:IsA("BoolValue") then
                temperature.Value = true
            else
                warn("O objeto existe, mas não possui propriedade Disabled.")
            end
        end

        -- Executa ao iniciar
        tryDisable()

        -- Caso o jogador respawne
        player.CharacterAdded:Connect(function()
            task.wait(1)
            tryDisable()
        end)
    end
})

--======== ABA EXTRA ========
local ExtraTab = Window:CreateTab("Extra", 4483362458)

-- Infinite Stamina Loop
local infStamLoop = false

local function StartInfStamLoop()
    while infStamLoop do
        local char = player.Character or player.CharacterAdded:Wait()
        local sprintScript = char:FindFirstChild("Sprint")
        if sprintScript then
            local overdrive = sprintScript:FindFirstChild("Overdrive")
            if overdrive and overdrive:IsA("ValueBase") then
                overdrive.Value = 99999999999
            end
        end
        task.wait(0.5)
    end
end

ExtraTab:CreateToggle({
    Name = "Inf Stam Loop",
    CurrentValue = false,
    Callback = function(state)
        infStamLoop = state
        if state then
            task.spawn(StartInfStamLoop)
        end
    end
})

-- Função genérica para mudar tag
local function SetChatTag(tagValue)
    local title = player:FindFirstChild("Title")
    if title and title:IsA("ValueBase") then
        title.Value = tagValue
    else
        warn("Title não encontrado no jogador.")
    end
end

-- Botões de Tags
ExtraTab:CreateButton({
    Name = "Get Tag VIP Chat (visual)",
    Callback = function()
        SetChatTag("VIP")
    end
})

ExtraTab:CreateButton({
    Name = "Get Tag OWNER Chat (visual)",
    Callback = function()
        SetChatTag("Owner")
    end
})

ExtraTab:CreateButton({
    Name = "Get Tag Tester Chat (visual)",
    Callback = function()
        SetChatTag("Tester")
    end
})

ExtraTab:CreateButton({
    Name = "Get Tag Co-Owner Chat (visual)",
    Callback = function()
        SetChatTag("Co-Owner")
    end
})
